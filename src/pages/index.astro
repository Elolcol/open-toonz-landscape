---
import Button from "../components/ui/Button.astro";
import Layout from "../layouts/Layout.astro";
---

<Layout title="OpenToonz">
  <section class="hero">
    <img src="/public/cover_bg.webp" alt="" class="cover" />
    <img src="/public/hand.png" alt="" class="hand" />
    <div>
      <img src="/public/cover_logo.png" alt="" />
      <h2>A free and open source tool for animators.</h2>
      <Button>Download</Button>
    </div>
  </section>
</Layout>

<style>
  .hero {
    position: relative;
    width: 100%;
    height: 500px;
    overflow: hidden;

    .cover {
      height: 100%;
      width: 100%;
      object-fit: cover;
    }

    .hand {
      position: absolute;
      top: 100px;
      right: 0;
      height: 300px;
      width: auto;
      object-fit: contain;
    }

    div {
      position: absolute;
      top: 0;
      left: 0;
      height: 100%;
      width: 100%;
      z-index: 10;
      display: flex;
      flex-direction: column;
      justify-content: flex-end;
      align-items: flex-start;
      gap: var(--spacing-md);
      padding: var(--spacing-xl) 200px;

      h1 {
        font-size: 3.5rem;
        font-weight: 900;
      }

      h2 {
        font-weight: 400;
        text-align: center;
      }
    }
  }

  /* large */
  @media (max-width: 1280px) {
    .hero {
      height: 500px;

      div {
        justify-content: center;
        align-items: center;
        padding: 0;
      }
    }

    .hand {
      display: none;
    }
  }
</style>
